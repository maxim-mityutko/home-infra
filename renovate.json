{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabled": true,
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate Dashboard",
  "registryAliases": {
    "registry.brhd.io/docker.io": "index.docker.io",
    "registry.brhd.io/ghcr.io": "ghcr.io",
    "registry.brhd.io/quay.io": "quay.io",
    "registry.brhd.io/gcr.io": "gcr.io",
    "registry.brhd.io/k8s.io": "registry.k8s.io"
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/kubernetes/cluster/.+\\.ya?ml$/"
    ]
  },
  "prHourlyLimit": 25,
  "includePaths": [
    "kubernetes/cluster/**/**"
  ],
  "packageRules": [
    {
      "description": "Loose versioning for non-semver packages",
      "matchDatasources": [
        "kubernetes",
        "docker"
      ],
      "versioning": "regex:^(release)-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\.?(?<build>\\d+)?$",
      "matchPackageNames": [
        "/bazarr/",
        "/prowlarr/",
        "/qbitmanage/",
        "/qbittorrent/",
        "/radarr/",
        "/unpackerr/",
        "/lidarr/"
      ]
    },
    {
      "description": "Readarr: Only `testing` images are available",
      "matchDatasources": [
        "kubernetes",
        "docker"
      ],
      "versioning": "regex:^(testing)-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\.?(?<build>\\d+)?$",
      "matchPackageNames": [
        "/readarr/"
      ]
    },
    {
      "description": "Sonarr: Release or V4",
      "matchDatasources": [
        "kubernetes",
        "docker"
      ],
      "versioning": "regex:^(release|v4)-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\.?(?<build>\\d+)?$",
      "matchPackageNames": [
        "/sonarr/"
      ]
    },
    {
      "description": "Renovate: Only major updates",
      "matchPackageNames": ["renovate/renovate"],
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "enabled": false
    },
    {
      "description": "Victoria Metrics: Only major and minor updates",
      "matchPackageNames": ["victoria-metrics-k8s-stack"],
      "matchUpdateTypes": ["patch", "digest"],
      "enabled": false
    }
  ]
}
