{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabled": true,
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate Dashboard",
  "kubernetes": {
    "managerFilePatterns": [
      "/kubernetes/cluster/.+\\.ya?ml$/"
    ]
  },
  "prHourlyLimit": 15,
  "includePaths": [
    "kubernetes/cluster/**/**"
  ],
  "packageRules": [
    {
      "description": "Loose versioning for non-semver packages",
      "matchDatasources": [
        "kubernetes",
        "docker"
      ],
      "versioning": "regex:^(release)-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\.?(?<build>\\d+)?$",
      "matchPackageNames": [
        "/bazarr/",
        "/prowlarr/",
        "/qbitmanage/",
        "/qbittorrent/",
        "/radarr/",
        "/unpackerr/",
        "/lidarr/"
      ]
    },
    {
      "description": "Readarr: Only `testing` images are available",
      "matchDatasources": [
        "kubernetes",
        "docker"
      ],
      "versioning": "regex:^(testing)-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\.?(?<build>\\d+)?$",
      "matchPackageNames": [
        "/readarr/"
      ]
    },
    {
      "description": "Sonarr: Release or V4",
      "matchDatasources": [
        "kubernetes",
        "docker"
      ],
      "versioning": "regex:^(release|v4)-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\.?(?<build>\\d+)?$",
      "matchPackageNames": [
        "/sonarr/"
      ]
    }
  ]
}
